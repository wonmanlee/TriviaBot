<div class="container col-md-8 col-md-offset-2">
  <div class="page-header">
    <h1>Leaderboard <small> The IronYard's Finest </small></h1>
  </div>

  <table class="table table-hover table-bordered table-condensed">
    <tr>
      <th>Rank</th>
      <th>Username</th>
      <th>Score</th>
    </tr>
    <% if params[:page].nil? %>
      <% i = 0 %>
    <% else %>
      <% i = 10 * params[:page] %>
    <% end %>
    <% @users.each do |u| %>
      <% if current_user.id == u.id %>
    <tr class="info">
      <% else %>
    <tr>
      <% end %>
      <% i += 1 %>
      <td><%= i %></td>
      <td><%= u.email %></td>
      <td><%= u.total_score %></td>
    </tr>
    <% end %>
  </table>
  <%= paginate @users, theme: 'twitter-bootstrap-3' %>
</div>