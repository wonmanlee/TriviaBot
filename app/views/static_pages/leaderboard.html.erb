<%= paginate @users, theme: 'twitter-bootstrap-3' %>

<div class="container col-md-8 col-md-offset-2">
  <div class="page-header">
    <h1>Leaderboard <small> The IronYard's Finest </small></h1>
  </div>

  <table class="table table-hover table-bordered table-condensed">
    <tr>
      <th>Rank</th>
      <th>Username</th>
      <th>Score</th>
    </tr>
    <% i = 0 %>
    <% @users.each do |u| %>
    <tr>
      <% i += 1 %>
      <td><%= i %></td>
      <td><%= u.email %></td>
      <td><%= u.total_score %></td>
    </tr>
    <% end %>
  </table>
</div>