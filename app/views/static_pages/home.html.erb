<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="page-header">
        <h2>Register to play!</h2>
        <h3>Sample of available trivia categories!</h3>
      </div>
      <table class="table table-hover table-bordered table-condensed">
      <% @categories.each_slice(4) do |cat| %>
        <tr>
          <% cat.each do |c| %>
          <td><%= c.titleize %></td>
          <% end %>
        </tr>
      <% end %>
    </div>
  </div>
</div>