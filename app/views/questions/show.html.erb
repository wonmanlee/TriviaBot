<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel status panel-primary">
        <div class="panel-heading">
          <h1 class="panel-title text-center"><%= @value %></h1>
        </div>
        <div class="panel-body text-center">                        
          <strong><%= @category_title.titleize %></strong>
        </div>
      </div>
      <blockquote>
        <p><%= @question %></p>
      </blockquote>
      <%= form_tag(answers_path, method: "POST") do %>
      <input type="text" class="form-control" name="answer" placeholder="Input your answer">
      <input type="hidden" name="question_id" value=<%= params[:id] %>>
      <button type="submit" class="btn btn-default">Submit</button>
      <% end %>
      <div class="profile-circle" style="background-color: rgba(0,0,0,.2);"></div>
    </div>
  </div>
</div>

